 <pattern id="pattern_blue" x="0" y="126" patternUnits="userSpaceOnUse" width="20" height="20" viewBox="0 0 10 16"> 
    <g id="cube">
      <path fill="blue" class="left-shade" d="M0 0l5 3v5l-5 -3z"></path>
      <path fill="lightblue" class="right-shade" d="M10 0l-5 3v5l5 -3"></path>
